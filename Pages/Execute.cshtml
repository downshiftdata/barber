@page
@model barber.Pages.ExecuteModel
@{
    ViewData["Title"] = "Execute Statement";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.StatementKey == null)
            {
            <div class="form-group">
                <label asp-for="StatementKey" class="control-label"></label>
                <select asp-for="StatementKey" class="form-control" asp-items="Model.Statements"></select>
                <span asp-validation-for="StatementKey" class="text-danger"></span>
            </div>
            }
            else
            {
            <div class="form-group">
                <label asp-for="StatementKey" class="form-control"></label>
            </div>
            }
            @if (Model.DatabaseKey == null)
            {
            <div class="form-group">
                <label asp-for="DatabaseKey" class="control-label"></label>
                <select asp-for="DatabaseKey" class="form-control" asp-items="Model.Databases"></select>
                <span asp-validation-for="DatabaseKey" class="text-danger"></span>
            </div>
            }
            else
            {
            <div class="form-group">
                <label asp-for="DatabaseKey" class="form-control"></label>
            </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}